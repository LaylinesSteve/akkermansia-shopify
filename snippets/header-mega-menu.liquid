{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<style>
  .mega-menu__link--with-image {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .mega-menu__image-wrapper {
    flex-shrink: 0;
    display: block;
  }
  
  .mega-menu__item-image {
    width: 150px;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
    display: block;
  }
  
  .mega-menu__link--level-2 .mega-menu__item-image {
    width: 150px;
    max-width: 150px;
  }
  
  .mega-menu__link:not(.mega-menu__link--level-2) .mega-menu__item-image {
    width: 100px;
    max-width: 100px;
  }
  
  .mega-menu__link-text {
    display: block;
  }
  
  @media screen and (max-width: 989px) {
    .mega-menu__item-image {
      width: 100px;
    }
    
    .mega-menu__link--level-2 .mega-menu__item-image {
      width: 100px;
      max-width: 100px;
    }
  }
</style>

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {% render 'icon-caret' %}
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <ul
                  class="mega-menu__list page-width{% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                  role="list"
                >
                  {%- for childlink in link.links -%}
                    <li>
                      {%- comment -%} Get image from metafield or object {%- endcomment -%}
                      {%- assign menu_item_image = null -%}
                      
                      {%- comment -%} Try to get product from URL if type is not detected {%- endcomment -%}
                      {%- assign menu_product = null -%}
                      {%- if childlink.type == 'product' -%}
                        {%- assign menu_product = childlink.object -%}
                      {%- elsif childlink.url contains '/products/' -%}
                        {%- assign product_handle = childlink.url | split: '/products/' | last | split: '?' | first -%}
                        {%- assign menu_product = all_products[product_handle] -%}
                      {%- endif -%}
                      
                      {%- if childlink.type == 'collection' -%}
                        {%- if childlink.object.metafields.custom.menu_image != blank -%}
                          {%- assign menu_item_image = childlink.object.metafields.custom.menu_image -%}
                        {%- elsif childlink.object.metafields.theme.menu_image != blank -%}
                          {%- assign menu_item_image = childlink.object.metafields.theme.menu_image -%}
                        {%- elsif childlink.object.featured_image != blank -%}
                          {%- assign menu_item_image = childlink.object.featured_image -%}
                        {%- endif -%}
                      {%- elsif menu_product != null -%}
                        {%- comment -%} Check for menu_image metafield on product {%- endcomment -%}
                        {%- if menu_product.metafields.custom.menu_image != blank -%}
                          {%- assign menu_item_image = menu_product.metafields.custom.menu_image -%}
                        {%- elsif menu_product.metafields.theme.menu_image != blank -%}
                          {%- assign menu_item_image = menu_product.metafields.theme.menu_image -%}
                        {%- elsif menu_product.metafields.shopify.menu_image != blank -%}
                          {%- assign menu_item_image = menu_product.metafields.shopify.menu_image -%}
                        {%- elsif menu_product.featured_media != blank -%}
                          {%- assign menu_item_image = menu_product.featured_media -%}
                        {%- endif -%}
                      {%- elsif childlink.type == 'page' -%}
                        {%- if childlink.object.metafields.custom.menu_image != blank -%}
                          {%- assign menu_item_image = childlink.object.metafields.custom.menu_image -%}
                        {%- elsif childlink.object.metafields.theme.menu_image != blank -%}
                          {%- assign menu_item_image = childlink.object.metafields.theme.menu_image -%}
                        {%- endif -%}
                      {%- endif -%}
                      
                      <a
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        href="{{ childlink.url }}"
                        class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}{% if menu_item_image != null %} mega-menu__link--with-image{% endif %}"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {%- if menu_item_image != null -%}
                          <span class="mega-menu__image-wrapper">
                            {%- comment -%} Handle different image types: file metafield, URL string, or image object {%- endcomment -%}
                            {%- if menu_item_image.url != blank -%}
                              {%- comment -%} File metafield object with .url property {%- endcomment -%}
                              <img 
                                src="{{ menu_item_image.url }}"
                                alt="{{ menu_item_image.alt | default: childlink.title | escape }}"
                                class="mega-menu__item-image"
                                loading="lazy"
                                width="150"
                                height="150"
                              >
                            {%- elsif menu_item_image contains 'http' or menu_item_image contains '//' -%}
                              {%- comment -%} External URL string {%- endcomment -%}
                              <img 
                                src="{{ menu_item_image }}"
                                alt="{{ childlink.title | escape }}"
                                class="mega-menu__item-image"
                                loading="lazy"
                                width="150"
                                height="150"
                              >
                            {%- else -%}
                              {%- comment -%} Shopify image object (featured_media, featured_image) {%- endcomment -%}
                              <img 
                                src="{{ menu_item_image | image_url: width: 150 }}"
                                alt="{{ menu_item_image.alt | default: childlink.title | escape }}"
                                class="mega-menu__item-image"
                                loading="lazy"
                                width="150"
                                height="{{ 150 | divided_by: menu_item_image.aspect_ratio | round }}"
                              >
                            {%- endif -%}
                          </span>
                        {%- endif -%}
                        <span class="mega-menu__link-text">{{ childlink.title | escape }}</span>
                      </a>
                      {%- if childlink.links != blank -%}
                        <ul class="list-unstyled" role="list">
                          {%- for grandchildlink in childlink.links -%}
                            <li>
                              {%- comment -%} Get image for grandchild menu item {%- endcomment -%}
                              {%- assign grandchild_image = null -%}
                              
                              {%- comment -%} Try to get product from URL if type is not detected {%- endcomment -%}
                              {%- assign grandchild_product = null -%}
                              {%- if grandchildlink.type == 'product' -%}
                                {%- assign grandchild_product = grandchildlink.object -%}
                              {%- elsif grandchildlink.url contains '/products/' -%}
                                {%- assign product_handle = grandchildlink.url | split: '/products/' | last | split: '?' | first -%}
                                {%- assign grandchild_product = all_products[product_handle] -%}
                              {%- endif -%}
                              
                              {%- if grandchildlink.type == 'collection' -%}
                                {%- if grandchildlink.object.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.custom.menu_image -%}
                                {%- elsif grandchildlink.object.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.theme.menu_image -%}
                                {%- elsif grandchildlink.object.featured_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.featured_image -%}
                                {%- endif -%}
                              {%- elsif grandchild_product != null -%}
                                {%- if grandchild_product.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.custom.menu_image -%}
                                {%- elsif grandchild_product.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.theme.menu_image -%}
                                {%- elsif grandchild_product.metafields.shopify.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.shopify.menu_image -%}
                                {%- elsif grandchild_product.featured_media != blank -%}
                                  {%- assign grandchild_image = grandchild_product.featured_media -%}
                                {%- endif -%}
                              {%- elsif grandchildlink.type == 'page' -%}
                                {%- if grandchildlink.object.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.custom.menu_image -%}
                                {%- elsif grandchildlink.object.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.theme.menu_image -%}
                                {%- endif -%}
                              {%- endif -%}
                              
                              <a
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                href="{{ grandchildlink.url }}"
                                class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}{% if grandchild_image != null %} mega-menu__link--with-image{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {%- if grandchild_image != null -%}
                                  <span class="mega-menu__image-wrapper">
                                    {%- if grandchild_image.url != blank -%}
                                      {%- comment -%} File metafield object with .url property {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image.url }}"
                                        alt="{{ grandchild_image.alt | default: grandchildlink.title | escape }}"
                                        class="mega-menu__item-image"
                                        loading="lazy"
                                        width="100"
                                        height="100"
                                      >
                                    {%- elsif grandchild_image contains 'http' or grandchild_image contains '//' -%}
                                      {%- comment -%} External URL string {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image }}"
                                        alt="{{ grandchildlink.title | escape }}"
                                        class="mega-menu__item-image"
                                        loading="lazy"
                                        width="100"
                                        height="100"
                                      >
                                    {%- else -%}
                                      {%- comment -%} Shopify image object {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image | image_url: width: 100 }}"
                                        alt="{{ grandchild_image.alt | default: grandchildlink.title | escape }}"
                                        class="mega-menu__item-image"
                                        loading="lazy"
                                        width="100"
                                        height="{{ 100 | divided_by: grandchild_image.aspect_ratio | round }}"
                                      >
                                    {%- endif -%}
                                  </span>
                                {%- endif -%}
                                <span class="mega-menu__link-text">{{ grandchildlink.title | escape }}</span>
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
