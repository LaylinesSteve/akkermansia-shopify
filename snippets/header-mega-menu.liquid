{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<style>
  /* Make parent list a flex container when it contains product cards */
  .mega-menu__list.mega-menu__list--condensed:has(.mega-menu__product-cards-container) {
    display: flex !important;
    flex-direction: row !important;
    gap: 1.5rem !important;
    flex-wrap: nowrap !important;
  }
  
  /* Container for product cards - side by side on desktop */
  /* Override grid layout for product cards container */
  .mega-menu__list .mega-menu__product-cards-container {
    display: flex !important;
    flex-direction: row !important;
    gap: 1.5rem !important;
    flex-wrap: nowrap !important;
    list-style: none !important;
    padding: 0 !important;
    margin: 0 !important;
    align-items: flex-start;
    flex: 0 0 auto;
  }
  
  .mega-menu__product-cards-container .mega-menu__product-card {
    flex: 0 0 auto !important;
    margin: 0 !important;
    min-width: 0;
  }
  
  .mega-menu__product-link {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
    width: 100%;
  }
  
  .mega-menu__product-link:hover {
    opacity: 0.8;
  }
  
  .mega-menu__product-image {
    width: 150px !important;
    height: 150px !important;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 0.5rem;
    background: #f5f5f5;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  
  .mega-menu__product-image img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  
  .mega-menu__product-title {
    font-size: 1.1rem !important;
    line-height: 1.4;
    max-width: 150px;
    font-weight: 500;
    margin: 0;
  }
  
  .mega-menu__link-text {
    display: block;
  }
  
  @media screen and (max-width: 989px) {
    .mega-menu__list .mega-menu__product-cards-container {
      flex-direction: column !important;
      gap: 1rem !important;
    }
    
    .mega-menu__product-image {
      width: 120px !important;
      height: 120px !important;
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
    }
    
    .mega-menu__product-image img {
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
      width: 100% !important;
      height: 100% !important;
    }
    
    .mega-menu__product-title {
      max-width: 120px;
      font-size: 1rem !important;
    }
  }
</style>

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {% render 'icon-caret' %}
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <ul
                  class="mega-menu__list page-width{% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                  role="list"
                >
                  {%- comment -%} Check if this is the Shop menu {%- endcomment -%}
                  {%- assign is_shop_menu = false -%}
                  {%- assign link_title_lower = link.title | downcase -%}
                  {%- if link_title_lower == 'shop' or link.handle == 'shop' -%}
                    {%- assign is_shop_menu = true -%}
                  {%- endif -%}
                  
                  {%- for childlink in link.links -%}
                    {%- comment -%} For Shop menu: first two items get product cards, others are regular links {%- endcomment -%}
                    {%- if is_shop_menu and forloop.index == 1 -%}
                      {%- comment -%} Open container for first product {%- endcomment -%}
                      <li class="mega-menu__product-cards-container">
                    {%- elsif is_shop_menu and forloop.index > 2 -%}
                      {%- comment -%} Regular list item for items after first two {%- endcomment -%}
                      <li>
                    {%- elsif is_shop_menu == false -%}
                      {%- comment -%} Regular list item for non-Shop menus {%- endcomment -%}
                      <li>
                    {%- endif -%}
                    
                    {%- if is_shop_menu and forloop.index <= 2 -%}
                        {%- comment -%} Get product object - try multiple methods {%- endcomment -%}
                        {%- assign menu_product = null -%}
                        {%- assign product_found = false -%}
                        
                        {%- comment -%} Method 1: Direct product type or product_link type {%- endcomment -%}
                        {%- if childlink.type == 'product' or childlink.type == 'product_link' -%}
                          {%- if childlink.object != null and childlink.object != blank -%}
                            {%- assign menu_product = childlink.object -%}
                            {%- assign product_found = true -%}
                          {%- endif -%}
                        {%- endif -%}
                        
                        {%- comment -%} Method 2: Extract from URL if object not available {%- endcomment -%}
                        {%- if product_found == false and childlink.url contains '/products/' -%}
                          {%- assign product_handle = childlink.url | split: '/products/' | last | split: '?' | first | split: '#' | first -%}
                          {%- comment -%} Try with the handle as-is first {%- endcomment -%}
                          {%- assign menu_product = all_products[product_handle] -%}
                          {%- if menu_product != null and menu_product != blank -%}
                            {%- assign product_found = true -%}
                          {%- else -%}
                            {%- comment -%} Try URL-decoded version {%- endcomment -%}
                            {%- assign decoded_handle = product_handle | url_decode -%}
                            {%- if decoded_handle != product_handle -%}
                              {%- assign menu_product = all_products[decoded_handle] -%}
                              {%- if menu_product != null and menu_product != blank -%}
                                {%- assign product_found = true -%}
                              {%- endif -%}
                            {%- endif -%}
                          {%- endif -%}
                        {%- endif -%}
                        
                        {%- comment -%} Method 3: Search collections.all {%- endcomment -%}
                        {%- if product_found == false and product_handle != blank -%}
                          {%- for product in collections.all.products -%}
                            {%- if product.handle == product_handle or product.handle == decoded_handle -%}
                              {%- assign menu_product = product -%}
                              {%- assign product_found = true -%}
                              {%- break -%}
                            {%- endif -%}
                          {%- endfor -%}
                        {%- endif -%}
                        
                        {%- comment -%} Render product card if found {%- endcomment -%}
                        {%- if product_found and menu_product != null and menu_product != blank -%}
                          <div class="mega-menu__product-card">
                            <a
                              href="{{ menu_product.url }}"
                              class="mega-menu__product-link"
                              id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                            >
                              {%- comment -%} Get product image {%- endcomment -%}
                              {%- assign product_image = null -%}
                              {%- if menu_product.featured_media != blank -%}
                                {%- assign product_image = menu_product.featured_media -%}
                              {%- elsif menu_product.media != blank and menu_product.media.size > 0 -%}
                                {%- assign product_image = menu_product.media[0] -%}
                              {%- endif -%}
                              
                              {%- if product_image != null -%}
                                <div class="mega-menu__product-image">
                                  <img
                                    src="{{ product_image | image_url: width: 200 }}"
                                    alt="{{ product_image.alt | default: menu_product.title | escape }}"
                                    loading="lazy"
                                    width="200"
                                    height="{{ 200 | divided_by: product_image.aspect_ratio | round }}"
                                  >
                                </div>
                              {%- endif -%}
                              <div class="mega-menu__product-title">{{ menu_product.title }}</div>
                            </a>
                          </div>
                        {%- else -%}
                          {%- comment -%} Fallback to regular link if product not found {%- endcomment -%}
                          <!-- Debug: Product not found for {{ childlink.title }}, type: {{ childlink.type }}, url: {{ childlink.url }} -->
                          <a
                            id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                            href="{{ childlink.url }}"
                            class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                            {% if childlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            <span class="mega-menu__link-text">{{ childlink.title | escape }}</span>
                          </a>
                        {%- endif -%}
                      {%- else -%}
                        {%- comment -%} Regular menu link (not first two in Shop menu) {%- endcomment -%}
                        <a
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                          href="{{ childlink.url }}"
                          class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                          {% if childlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          <span class="mega-menu__link-text">{{ childlink.title | escape }}</span>
                        </a>
                      {%- endif -%}
                      
                      {%- comment -%} Close container after second product card {%- endcomment -%}
                      {%- if is_shop_menu and forloop.index == 2 -%}
                        </li>
                      {%- elsif is_shop_menu and forloop.index > 2 -%}
                        </li>
                      {%- elsif is_shop_menu == false -%}
                        </li>
                      {%- endif -%}
                      
                      {%- if childlink.links != blank -%}
                        <ul class="list-unstyled" role="list">
                          {%- for grandchildlink in childlink.links -%}
                            <li>
                              {%- comment -%} Get image for grandchild menu item {%- endcomment -%}
                              {%- assign grandchild_image = null -%}
                              
                              {%- comment -%} Try to get product from URL if type is not detected {%- endcomment -%}
                              {%- assign grandchild_product = null -%}
                              {%- if grandchildlink.type == 'product' -%}
                                {%- assign grandchild_product = grandchildlink.object -%}
                              {%- elsif grandchildlink.url contains '/products/' -%}
                                {%- assign product_handle = grandchildlink.url | split: '/products/' | last | split: '?' | first -%}
                                {%- assign grandchild_product = all_products[product_handle] -%}
                              {%- endif -%}
                              
                              {%- if grandchildlink.type == 'collection' -%}
                                {%- if grandchildlink.object.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.custom.menu_image -%}
                                {%- elsif grandchildlink.object.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.theme.menu_image -%}
                                {%- elsif grandchildlink.object.featured_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.featured_image -%}
                                {%- endif -%}
                              {%- elsif grandchild_product != null -%}
                                {%- if grandchild_product.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.custom.menu_image -%}
                                {%- elsif grandchild_product.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.theme.menu_image -%}
                                {%- elsif grandchild_product.metafields.shopify.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.shopify.menu_image -%}
                                {%- elsif grandchild_product.featured_media != blank -%}
                                  {%- assign grandchild_image = grandchild_product.featured_media -%}
                                {%- endif -%}
                              {%- elsif grandchildlink.type == 'page' -%}
                                {%- if grandchildlink.object.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.custom.menu_image -%}
                                {%- elsif grandchildlink.object.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.theme.menu_image -%}
                                {%- endif -%}
                              {%- endif -%}
                              
                              <a
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                href="{{ grandchildlink.url }}"
                                class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}{% if grandchild_image != null %} mega-menu__link--with-image{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {%- if grandchild_image != null -%}
                                  <span class="mega-menu__image-wrapper">
                                    {%- if grandchild_image.url != blank -%}
                                      {%- comment -%} File metafield object with .url property {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image.url }}"
                                        alt="{{ grandchild_image.alt | default: grandchildlink.title | escape }}"
                                        class="mega-menu__item-image"
                                        loading="lazy"
                                        width="100"
                                        height="100"
                                      >
                                    {%- elsif grandchild_image contains 'http' or grandchild_image contains '//' -%}
                                      {%- comment -%} External URL string {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image }}"
                                        alt="{{ grandchildlink.title | escape }}"
                                        class="mega-menu__item-image"
                                        loading="lazy"
                                        width="100"
                                        height="100"
                                      >
                                    {%- else -%}
                                      {%- comment -%} Shopify image object {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image | image_url: width: 100 }}"
                                        alt="{{ grandchild_image.alt | default: grandchildlink.title | escape }}"
                                        class="mega-menu__item-image"
                                        loading="lazy"
                                        width="100"
                                        height="{{ 100 | divided_by: grandchild_image.aspect_ratio | round }}"
                                      >
                                    {%- endif -%}
                                  </span>
                                {%- endif -%}
                                <span class="mega-menu__link-text">{{ grandchildlink.title | escape }}</span>
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
