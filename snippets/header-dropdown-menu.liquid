{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'header-dropdown-menu' %}
{% endcomment %}

<style>
  .header__menu-item--with-image {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .header__menu-image-wrapper {
    flex-shrink: 0;
    display: block;
  }
  
  .header__menu-item-image {
    width: 80px;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
    display: block;
  }
  
  .header__submenu .header__menu-item-image {
    width: 60px;
  }

  /* Shop dropdown: bigger text */
  .header__submenu--shop .header__menu-item {
    font-size: 1.25rem !important;
  }

  /* Shop dropdown: product-style card items */
  .header__submenu--shop .shop-card-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.4rem 1rem;
  }
  
  .header__submenu--shop .shop-card-item .shop-card-image {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    object-fit: cover;
    display: block;
    flex-shrink: 0;
  }

  .header__submenu--shop .shop-card-item .shop-card-title {
    font-size: 1.25rem;
    font-weight: 500;
  }
</style>

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {% render 'icon-caret' %}
              </summary>
              <ul
                id="HeaderMenu-MenuList-{{ forloop.index }}"
                class="header__submenu list-menu list-menu--disclosure color-{{ section.settings.menu_color_scheme }} gradient caption-large motion-reduce global-settings-popup{% if link.title | downcase == 'shop' or link.handle == 'shop' %} header__submenu--shop{% endif %}"
                role="list"
                tabindex="-1"
              >
                {%- comment -%} Check if this is the Shop menu (case-insensitive) {%- endcomment -%}
                {%- assign is_shop_menu = false -%}
                {%- assign link_title_lower = link.title | downcase -%}
                {%- if link_title_lower == 'shop' or link.handle == 'shop' or link_title_lower contains 'shop' -%}
                  {%- assign is_shop_menu = true -%}
                {%- endif -%}
                
                {%- for childlink in link.links -%}
                  <li>
                    {%- comment -%} Detect HCP link by title {%- endcomment -%}
                    {%- assign childlink_title_lower = childlink.title | downcase -%}
                    {%- assign is_hcp_link = false -%}
                    {%- if childlink_title_lower contains 'health care professional' or childlink_title_lower contains 'healthcare professional' or childlink_title_lower contains 'hcp' or childlink_title_lower contains 'professional' -%}
                      {%- assign is_hcp_link = true -%}
                    {%- endif -%}

                    {%- comment -%} Get image from product or assign stethoscope for HCP {%- endcomment -%}
                    {%- assign menu_item_image = null -%}
                    {%- assign use_hcp_image = false -%}
                    
                    {%- comment -%} Try to get product from URL or type {%- endcomment -%}
                    {%- assign menu_product = null -%}
                    {%- if childlink.type == 'product' -%}
                      {%- assign menu_product = childlink.object -%}
                    {%- elsif childlink.url contains '/products/' -%}
                      {%- assign product_handle = childlink.url | split: '/products/' | last | split: '?' | first | split: '#' | first -%}
                      {%- assign menu_product = all_products[product_handle] -%}
                      {%- comment -%} If all_products doesn't work, try products collection {%- endcomment -%}
                      {%- if menu_product == null -%}
                        {%- for product in collections.all.products -%}
                          {%- if product.handle == product_handle -%}
                            {%- assign menu_product = product -%}
                            {%- break -%}
                          {%- endif -%}
                        {%- endfor -%}
                      {%- endif -%}
                    {%- endif -%}
                    
                    {%- comment -%} For Shop menu: product images for products, stethoscope for HCP {%- endcomment -%}
                    {%- if is_shop_menu and is_hcp_link -%}
                      {%- assign use_hcp_image = true -%}
                    {%- elsif menu_product != null -%}
                      {%- if is_shop_menu -%}
                        {%- if menu_product.featured_media != blank -%}
                          {%- assign menu_item_image = menu_product.featured_media -%}
                        {%- elsif menu_product.media != blank and menu_product.media.size > 0 -%}
                          {%- assign menu_item_image = menu_product.media[0] -%}
                        {%- endif -%}
                      {%- endif -%}
                    {%- elsif childlink.type == 'collection' -%}
                      {%- if childlink.object.featured_image != blank -%}
                        {%- assign menu_item_image = childlink.object.featured_image -%}
                      {%- endif -%}
                    {%- endif -%}
                    
                    {%- if childlink.links == blank -%}
                      {%- if is_shop_menu and use_hcp_image -%}
                        {%- comment -%} HCP link styled like a product card with stethoscope image {%- endcomment -%}
                        <a
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                          href="{{ childlink.url }}"
                          class="header__menu-item list-menu__item link link--text focus-inset caption-large shop-card-item{% if childlink.current %} list-menu__item--active{% endif %}"
                          {% if childlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          <img
                            src="https://cdn.shopify.com/s/files/1/0699/8071/7276/files/stethoscope-icon.jpg?v=1770731738"
                            alt="{{ childlink.title | escape }}"
                            class="shop-card-image"
                            loading="lazy"
                            width="80"
                            height="80"
                          >
                          <span class="shop-card-title">{{ childlink.title | escape }}</span>
                        </a>
                      {%- else -%}
                      <a
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        href="{{ childlink.url }}"
                        class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}{% if menu_item_image != null %} header__menu-item--with-image{% endif %}"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {%- if menu_item_image != null -%}
                          <span class="header__menu-image-wrapper">
                            <img 
                              src="{{ menu_item_image | image_url: width: 80 }}"
                              alt="{{ menu_item_image.alt | default: childlink.title | escape }}"
                              class="header__menu-item-image"
                              loading="lazy"
                              width="80"
                              height="{{ 80 | divided_by: menu_item_image.aspect_ratio | round }}"
                            >
                          </span>
                        {%- endif -%}
                        <span>{{ childlink.title | escape }}</span>
                      </a>
                      {%- endif -%}
                    {%- else -%}
                      <details id="Details-HeaderSubMenu-{{ link.handle }}-{{ childlink.handle }}">
                        <summary
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                          class="header__menu-item link link--text list-menu__item focus-inset caption-large{% if menu_item_image != null %} header__menu-item--with-image{% endif %}"
                        >
                          {%- if menu_item_image != null -%}
                            <span class="header__menu-image-wrapper">
                              <img 
                                src="{{ menu_item_image | image_url: width: 80 }}"
                                alt="{{ menu_item_image.alt | default: childlink.title | escape }}"
                                class="header__menu-item-image"
                                loading="lazy"
                                width="80"
                                height="{{ 80 | divided_by: menu_item_image.aspect_ratio | round }}"
                              >
                            </span>
                          {%- endif -%}
                          <span>{{ childlink.title | escape }}</span>
                          {% render 'icon-caret' %}
                        </summary>
                        <ul
                          id="HeaderMenu-SubMenuList-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                          class="header__submenu list-menu motion-reduce"
                        >
                          {%- for grandchildlink in childlink.links -%}
                            <li>
                              {%- comment -%} Get image for grandchild menu item {%- endcomment -%}
                              {%- assign grandchild_image = null -%}
                              
                              {%- comment -%} Try to get product from URL if type is not detected {%- endcomment -%}
                              {%- assign grandchild_product = null -%}
                              {%- if grandchildlink.type == 'product' -%}
                                {%- assign grandchild_product = grandchildlink.object -%}
                              {%- elsif grandchildlink.url contains '/products/' -%}
                                {%- assign product_handle = grandchildlink.url | split: '/products/' | last | split: '?' | first -%}
                                {%- assign grandchild_product = all_products[product_handle] -%}
                              {%- endif -%}
                              
                              {%- if grandchildlink.type == 'collection' -%}
                                {%- if grandchildlink.object.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.custom.menu_image -%}
                                {%- elsif grandchildlink.object.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.theme.menu_image -%}
                                {%- elsif grandchildlink.object.featured_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.featured_image -%}
                                {%- endif -%}
                              {%- elsif grandchild_product != null -%}
                                {%- if grandchild_product.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.custom.menu_image -%}
                                {%- elsif grandchild_product.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.theme.menu_image -%}
                                {%- elsif grandchild_product.metafields.shopify.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchild_product.metafields.shopify.menu_image -%}
                                {%- elsif grandchild_product.featured_media != blank -%}
                                  {%- assign grandchild_image = grandchild_product.featured_media -%}
                                {%- endif -%}
                              {%- elsif grandchildlink.type == 'page' -%}
                                {%- if grandchildlink.object.metafields.custom.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.custom.menu_image -%}
                                {%- elsif grandchildlink.object.metafields.theme.menu_image != blank -%}
                                  {%- assign grandchild_image = grandchildlink.object.metafields.theme.menu_image -%}
                                {%- endif -%}
                              {%- endif -%}
                              
                              <a
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                href="{{ grandchildlink.url }}"
                                class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}{% if grandchild_image != null %} header__menu-item--with-image{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {%- if grandchild_image != null -%}
                                  <span class="header__menu-image-wrapper">
                                    {%- if grandchild_image.url != blank -%}
                                      {%- comment -%} File metafield object with .url property {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image.url }}"
                                        alt="{{ grandchild_image.alt | default: grandchildlink.title | escape }}"
                                        class="header__menu-item-image"
                                        loading="lazy"
                                        width="60"
                                        height="60"
                                      >
                                    {%- elsif grandchild_image contains 'http' or grandchild_image contains '//' -%}
                                      {%- comment -%} External URL string {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image }}"
                                        alt="{{ grandchildlink.title | escape }}"
                                        class="header__menu-item-image"
                                        loading="lazy"
                                        width="60"
                                        height="60"
                                      >
                                    {%- else -%}
                                      {%- comment -%} Shopify image object {%- endcomment -%}
                                      <img 
                                        src="{{ grandchild_image | image_url: width: 60 }}"
                                        alt="{{ grandchild_image.alt | default: grandchildlink.title | escape }}"
                                        class="header__menu-item-image"
                                        loading="lazy"
                                        width="60"
                                        height="{{ 60 | divided_by: grandchild_image.aspect_ratio | round }}"
                                      >
                                    {%- endif -%}
                                  </span>
                                {%- endif -%}
                                <span>{{ grandchildlink.title | escape }}</span>
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </details>
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
